<Window x:Class="KinectSkeletonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Skeleton Tracker" Height="600" Width="800"
        WindowStartupLocation="Manual" Left="-50" Top="-50">

    <Grid>
        <Canvas Name="SkeletonCanvas" Background="Black"/>

        <!-- UI Buttons for Recording Gestures -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button Name="StartRecordingButton" Content="Start Recording" Width="150" Height="40" Click="StartRecordingButton_Click"/>
            <Button Name="StopRecordingButton" Content="Stop" Width="150" Height="40" Margin="10,0,0,0" Click="StopRecordingButton_Click"/>
        </StackPanel>
    </Grid>
</Window>